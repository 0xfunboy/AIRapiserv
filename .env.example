# Core runtime
NODE_ENV=development
LOG_LEVEL=info
PORT=3000
WEB_PORT=4000
API_PORT=3333
INGESTION_WORKER_CONCURRENCY=4
ENABLE_ROLLING_CANDLES=true

# Redis (DB1)
REDIS_URL=redis://localhost:6379/0

# ClickHouse (DB2)
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=airapiserv

# Postgres (DB3)
PG_HOST=localhost
PG_PORT=5432
PG_USER=airapiserv
PG_PASSWORD=airapiserv
PG_DATABASE=airapiserv

# Auth / Security
JWT_SECRET=change-me
API_RATE_LIMIT=200
CORS_ORIGINS=http://localhost:4000

# Providers
COINGECKO_API_KEY=
COINMARKETCAP_API_KEY=
CRYPTOCOMPARE_API_KEY=
DEXSCREENER_BASE_URL=https://api.dexscreener.io
DEFILLAMA_BASE_URL=https://coins.llama.fi
BINANCE_WS_URL=wss://stream.binance.com:9443/ws
BYBIT_WS_URL=wss://stream.bybit.com/v5/public/spot

# Feature Flags
ENABLE_COINGECKO_FALLBACK=true
ENABLE_CRYPTOCOMPARE_FALLBACK=true
MAX_FALLBACK_CALLS_PER_MINUTE=2
FALLBACK_POLL_INTERVAL_MS=300000

# Web UI
NEXT_PUBLIC_API_BASE=http://localhost:3333
NEXT_PUBLIC_WS_URL=ws://localhost:3333/v1/ws
